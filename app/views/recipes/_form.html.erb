<%= render 'shared/errors', obj: @recipe %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form" }) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :name %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of Recipe", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :Details %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_area :details, rows: 5, class: "form-control", placeholder: "List ingredients and measurements here", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :description %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "How (and why) did you create this recipe?", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-offset-2 col-sm-8">
                        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                        <% end%>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>

        <% end %>

        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancle request and return to recipes listing", recipes_path %> ]
        </div>
    </div>
</div>